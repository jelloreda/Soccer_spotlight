<div class="container">

    <div class="row justify-content-center">

        <h1>Users List</h1>
        <hr>

        {{#each users}}

        <div class="col-md-4">


            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img id='userImg' src="{{avatar}}" alt="{{username}}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{username}}</h5>

                            <p class="card-text">{{email}}</p>
                            <p class="card-text"> <a href="user/profile/{{_id}}"> Details </a></p>
                        </div>
                    </div>
                </div>
            </div>




        </div>

        {{/each}}

    </div>

    <hr>

    <a href="/" class="btn btn-dark">Back to start</a>

</div>