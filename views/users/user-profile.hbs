<div class="container mt-3">


    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img id='userImg' src="{{avatar}}" alt="{{username}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{username}}</h5>

                    <p class="card-text">{{email}}</p>
                </div>
            </div>
        </div>
    </div>

    <a href="/user" class="btn btn-dark">Back to list</a>

</div>