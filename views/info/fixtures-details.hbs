<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>New Comment</h1>
            <hr>
            <h1>Matche details</h1>

            <form action="/create" method="POST">
                <div class="mb-6">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{title}}">
                </div>

                <div class="mb-6">
                    <label for="comment" class="form-label">Comment</label>
                    <input type="text" class="form-control" id="comment" name="comment" value="{{comment}}">
                </div>

                <input type="hidden" name="comments_id" value="{{id}}">

                <div class="d-grid mt-6">
                    <button type="submit" class="btn btn-dark btn-lg">Create comment</button>
                </div>

            </form>

        </div>
    </div>
</div>